    <div class="card-body">
      <h5 class="card-title"><%= @post.title %></h5>
      <h6 class="card-subtitle mb-2"><%= time_ago_in_words(@post.created_at) %> ago</h6>
      <div class="container text-center">
        <p class="card-text"><%= @post.content %></p>
      </div>
    </div>
</div>